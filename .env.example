# Argo Aviation Referral Portal - Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For SQLite (recommended for development)
DATABASE_URL=sqlite:///instance/app.db

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost/argo_referral

# For MySQL (alternative for production)
# DATABASE_URL=mysql://username:password@localhost/argo_referral

# Application Settings
APP_NAME=Argo Aviation Referral Portal
APP_VERSION=1.0.0

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password

# File Upload Settings
MAX_CONTENT_LENGTH=5242880  # 5MB in bytes
UPLOAD_FOLDER=uploads

# Security Settings
WTF_CSRF_TIME_LIMIT=3600  # CSRF token timeout in seconds
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/argo_referral.log

# Admin Settings
SUPERADMIN_EMAIL=admin@argoaviation.com

# Azure Configuration (if using Azure deployment)
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=referral-uploads

# Development Settings
DEBUG=True
TESTING=False
